FROM google/dart:1.24.3 as build

# Build Environment Vars
ARG BUILD_ID
ARG BUILD_NUMBER
ARG BUILD_URL
ARG GIT_COMMIT
ARG GIT_BRANCH
ARG GIT_TAG
ARG GIT_COMMIT_RANGE
ARG GIT_HEAD_URL
ARG GIT_MERGE_HEAD
ARG GIT_MERGE_BRANCH
WORKDIR /build/
ADD dart /build/

RUN echo "Starting smithy_before.dart..."
RUN dart --version
RUN pub get
RUN pub run dart_dev analyze

RUN echo "Starting the script sections" && \
		dart --version && \
#		test/fixtures/dart/run_command.sh&& \
		tool/codecov.sh && \
		cd doc/api && tar cvzf api_docs.tar.gz * && \
		echo "Script sections completed"

RUN test/fixtures/dart/run_command.sh

ARG BUILD_ARTIFACTS_DART-DEPENDENCIES=/build/pubspec.lock
ARG BUILD_ARTIFACTS_BUILD=/build/pubspec.lock
ARG BUILD_ARTIFACTS_PUB=/build/abide.pub.tgz
FROM scratch